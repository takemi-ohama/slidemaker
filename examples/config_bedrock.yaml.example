# slidemaker configuration example - AWS Bedrock

llm:
  # Configuration for slide composition generation (Bedrock)
  composition:
    type: api  # 'api' or 'cli'
    provider: bedrock-claude  # bedrock-claude or bedrock (alias)
    model: claude-3-5-sonnet-20241022  # Model identifier
    # Note: No api_key required for Bedrock (uses AWS credentials)
    extra_params:
      region: us-east-1  # AWS region (default: us-east-1)
      max_tokens: 4096   # Maximum tokens to generate
      temperature: 0.7   # Sampling temperature (0.0-1.0)
    timeout: 300  # Request timeout in seconds

  # Configuration for image generation (Bedrock)
  image_generation:
    type: api
    provider: bedrock-claude
    model: claude-3-5-haiku-20241022  # Faster model for image analysis
    extra_params:
      region: us-east-1
      max_tokens: 2048
      temperature: 0.5
    timeout: 300

output:
  # Output directory for generated slides
  directory: ./output

  # Temporary directory for intermediate files
  temp_directory: ./tmp

  # Keep temporary files after generation
  keep_temp: false

slide:
  # Default slide size (16:9, 4:3, etc.)
  default_size: "16:9"

  # Default theme
  default_theme: "minimal"

  # Default font
  default_font: "Arial"

logging:
  # Log level (DEBUG, INFO, WARNING, ERROR)
  level: INFO

  # Log format (json, text)
  format: json

  # Log file path (optional)
  file: null

# AWS Bedrock Configuration Notes:
#
# Authentication:
# Bedrock uses AWS credentials. Make sure you have one of the following:
#   1. Environment variables: AWS_ACCESS_KEY_ID, AWS_SECRET_ACCESS_KEY, AWS_SESSION_TOKEN (optional)
#   2. AWS credentials file: ~/.aws/credentials
#   3. IAM role (when running on EC2, Lambda, etc.)
#
# Supported Models:
#   - claude-3-5-sonnet-20241022  (recommended for composition)
#   - claude-3-5-haiku-20241022   (faster, good for image analysis)
#   - claude-3-opus-20240229
#   - claude-3-sonnet-20240229
#   - claude-3-haiku-20240307
#
# Regions:
# Bedrock is available in specific AWS regions. Common regions include:
#   - us-east-1 (US East, N. Virginia)
#   - us-west-2 (US West, Oregon)
#   - ap-northeast-1 (Asia Pacific, Tokyo)
#   - eu-west-1 (Europe, Ireland)
#
# Check https://docs.aws.amazon.com/bedrock/latest/userguide/what-is-bedrock.html
# for the latest region availability.
#
# Pricing:
# Bedrock charges per token (input + output). Refer to AWS Bedrock pricing:
# https://aws.amazon.com/bedrock/pricing/
#
# IAM Permissions:
# Your AWS credentials need the following permissions:
#   - bedrock:InvokeModel
#   - bedrock:InvokeModelWithResponseStream (if streaming is used)
#
# Example IAM policy:
# {
#   "Version": "2012-10-17",
#   "Statement": [
#     {
#       "Effect": "Allow",
#       "Action": [
#         "bedrock:InvokeModel",
#         "bedrock:InvokeModelWithResponseStream"
#       ],
#       "Resource": "arn:aws:bedrock:*:*:model/anthropic.claude-*"
#     }
#   ]
# }
